<% provide(:title, "Wallet") %>
<div class = "balance-box">
  <small>

    <h3>Balance: $<%=
      if current_user.balance.nil?
        render html: "0.00"
      else
        current_user.balance
      end %> </h3>



  </small>


</div>

<%= form_for(current_user, url: deposit_path) do |f| %>

  <%= f.label :deposit_amount %>
  <%= f.text_field :deposit_amount  %>

  <%= f.submit "Deposit amount", class: "btn btn-lg btn-primary" %>

<%end%>

